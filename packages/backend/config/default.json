{
  "host": "api.tldr.cards",
  "port": 443,
  "protocol": "https",
  "public": "./public/",
  "paginate": {
    "default": 10,
    "max": 50
  },
  "authentication": {
    "entity": "user",
    "service": "users",
    "secret": "gdz9bc3DJCpyZVG/BZydEDjcPa8=",
    "authStrategies": [
      "jwt",
      "local"
    ],
    "jwtOptions": {
      "header": {
        "typ": "access"
      },
      "audience": "https://yourdomain.com",
      "issuer": "feathers",
      "algorithm": "HS256",
      "expiresIn": "1d"
    },
    "local": {
      "usernameField": "email",
      "passwordField": "password"
    },
    "oauth": {
      "defaults": {
        "origin": "https://api.tldr.cards",
        "transport": "session"
      },
      "redirect": "https://tldr.cards:3000/tldr/oauth",
      "google": {
        "scope": ["openid", "profile", "email"],
        "response": ["tokens", "raw", "jwt", "profile"],
        "nonce": true
      },
      "apple": {
        "scope": ["openid", "name", "email"],
        "response": ["raw", "jwt"],
        "nonce": true,
        "custom_params": {
          "response_type": "code id_token",
          "response_mode": "form_post"
        }
      }
    }
  },
  "postgres": "postgres://richard@localhost:5432/starterkit"
}
